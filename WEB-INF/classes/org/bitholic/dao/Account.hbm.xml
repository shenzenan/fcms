<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
        package="org.bitholic.dao">

    <class name="Account" table="account">
        <id name="uid" column="uid">
        </id>
        <property name="passwd" column="passwd" not-null="true" />
        <property name="privilege" column="privilege" not-null="true" />
        <property name="remember" column="remember" />
        <property name="messageNumber" column="messageNumber" />
    </class>
</hibernate-mapping>
